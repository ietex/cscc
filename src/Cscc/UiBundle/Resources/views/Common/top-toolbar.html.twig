<ul class="toolbar-nav pull-left">
    <li>
        <a href="#callOutModal" id="callOutBtn" data-toggle="modal" title="{{ 'Call out'|trans }}">
            <i class="icon-call-out"></i>
        </a>
    </li>
    <li>
        <a href="javascript:void(0);" id="callOutBtn" title="{{ 'Call in'|trans }}">
            <i class="icon-call-in"></i>
        </a>

    </li>

    <li>
        <a href="javascript:void(0);" id="callOutBtn" title="{{ 'Call end'|trans }}">
            <i class="icon-call-end"></i>
        </a>

    </li>

</ul>

<div class="modal fade" id="callOutModal" tabindex="-1" role="callOutModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">{{ 'Call out' | trans }}</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group form-md-line-input has-error">
                        <label for="form_control_1" class="col-md-3 control-label">{{ 'Call out number'|trans }}</label>
                        <div class="col-md-9">
                            <div class="input-icon">
                                <input type="text" id="telNum" placeholder="Left icon" class="form-control">
                                <div class="form-control-focus"> </div>
                                <span class="help-block">{{ 'Please add zero to the number' }}</span>
                                <i class="fa fa-bell-o"></i>
                            </div>
                        </div>
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" id="callOutBtn" class="btn btn-outline sbold red" data-dismiss="modal">拔号</button>
                <button type="button" class="btn btn-outline sbold blue">取消</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script language="JavaScript" type="text/javascript">
    $(document).ready(function() {
        $('#callOutBtn').on('click',function(){
            var telNum=$('#telNum').val();
            alert(telNum);
            Tel.callOut(telNum);
        })

    });

</script>


